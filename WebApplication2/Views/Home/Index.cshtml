@{
    ViewBag.Title = "Home Page";
}

<div>
    <div class="titulo">
        <p>Interaction Design</p>
    </div>
    <div class="embed-responsive embed-responsive-16by9">
        <video class="embed-responsive-item" src="~/Content/video/proto.mp4" autoplay loop></video>
    </div>
</div>


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/images/bici.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Bicitaxis + Bogotá
                    <a class="btn btn-default" href="https://www.behance.net/gallery/43789023/Bicitaxis-Bogota-Creative-Production">
                        ver más
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/images/bernstein.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Bernstein Alive
                    <a class="btn btn-default" href="https://www.behance.net/gallery/60010535/Bernstein-Alive">
                        ver más
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/images/montaje.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Breath
                    <a class="btn btn-default" href="https://www.behance.net/gallery/50476559/BREATH">
                        ver más
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/images/graffiti.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Graffiti IR
                    <a class="btn btn-default" href="https://www.behance.net/gallery/45679883/Graffiti-Ambientes-Interactivos">
                        See More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


